{#                                    <b>Datum vytvoření:</b> {{ assets.dateCreated }}#}
{#                                </p>#}
{#                                <p class="text-m text-gray-600 dark:text-gray-400" id="demo">#}
{#                                    <b>Datum zařazení:</b> {{ assets.subsumptionDate }}#}
{#                                </p>#}
{#                                <p class="text-m text-gray-600 dark:text-gray-400">#}
{#                                    <b>Datum vyřazení:</b> {{ assets.eliminationDate }}#}
{#                                </p>#}
{#                                <p class="text-m text-gray-600 dark:text-gray-400">#}
{#                                    <b>Datum zakoupení:</b> {{ assets.dateBought }}#}
{#                                </p>#}
{#                                <p class="text-m text-gray-600 dark:text-gray-400">#}
{#                                    <b>Datum obdržení:</b> {{ assets.dateReceived }}#}
{#                                </p>#}
{#                                <p class="text-m text-gray-600 dark:text-gray-400">#}
{#                                    <b>Příští servis:</b> {{ assets.nextServiceDue }}#}
{#                                </p>#}
{#                                <p class="text-m text-gray-600 dark:text-gray-400">#}
{#                                    <b>Servisní interval:</b> {{ assets.serviceInterval }}#}
{#                                </p>#}
                            </div>

                            <div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800 border border-purple-400">
                                <p class="text-m text-gray-600 dark:text-gray-400">
                                    <b class="text-purple-400">Poznámka:</b> {{ assets.note }}
                                </p>
                                <p class="text-m text-gray-600 dark:text-gray-400">
                                    <b class="text-purple-400">Reklamace:</b> {{ assets.complaint }}
                                </p>
                                <p class="text-m text-gray-600 dark:text-gray-400">
                                    <b class="text-purple-400">Nahrané dokumenty:</b> <a href="{{ path('download_file', {'documentPath': assets.documentPath}) }}" class="hover:underline">{{ assets.documentPath }}</a>
                                </p>
                            </div>
                        </div>
                    </main>
                </div>
            </main>
        </div>
    </div>
{% endblock %}


