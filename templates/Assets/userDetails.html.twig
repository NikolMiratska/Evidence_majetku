{% extends 'base.html.twig' %}

{% block title %}Detaily majetku{% endblock %}

{% block body %}
    <div class="flex h-screen bg-gray-50 dark:bg-gray-900" :class="{ 'overflow-hidden': isSideMenuOpen }">
        <!-- Desktop sidebar -->
        <aside class="z-20 hidden w-64 overflow-y-auto bg-white dark:bg-gray-800 md:block flex-shrink-0">
            <div class="py-4 text-gray-500 dark:text-gray-400">
                <a class="ml-6 text-lg font-bold text-gray-800 dark:text-gray-200" href="/">
                    Evidence majetku
                </a>

                <div class="px-6 my-6">
                    <a href="/create">
                        <button class="flex items-center justify-between w-full px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple">
                            Přidat nový majetek
                            <span class="ml-2" aria-hidden="true">+</span>
                        </button>
                    </a>
                </div>

                <ul class="mt-6">
                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200" href="/">
                            <svg class="w-5 h-5" aria-hidden="true" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                                <path d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                            <span class="ml-4">Přehled</span>
                        </a>
                    </li>
                </ul>

                <ul>
                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200" href="/list">
                            <svg class="w-5 h-5" aria-hidden="true" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                                <path d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
                            </svg>
                            <span class="ml-4">Seznam majetku</span>
                        </a>
                    </li>

                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200" href="/users">
                            <svg class="w-5 h-5" aria-hidden="true" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                                <path d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                            </svg>
                            <span class="ml-4">Uživatelé</span>
                        </a>
                    </li>

                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200" href="/types">
                            <svg class="w-5 h-5" aria-hidden="true" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                                <path d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                            </svg>
                            <span class="ml-4">Druhy</span>
                        </a>
                    </li>

                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200" href="/categories">
                            <svg class="w-5 h-5" aria-hidden="true" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                                <path d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                            </svg>
                            <span class="ml-4">Kategorie</span>
                        </a>
                    </li>

                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200" href="/locations">
                            <svg class="w-5 h-5" aria-hidden="true" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                                <path d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                            </svg>
                            <span class="ml-4">Umístění</span>
                        </a>
                    </li>

                    <li class="relative px-6 py-3">
                        <a class="inline-flex items-center w-full text-sm font-semibold transition-colors duration-150 hover:text-gray-800 dark:hover:text-gray-200" href="/workplaces">
                            <svg class="w-5 h-5" aria-hidden="true" fill="none" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" stroke="currentColor">
                                <path d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
                            </svg>
                            <span class="ml-4">Pracoviště</span>
                        </a>
                    </li>

                    <li>
                        <hr class="my-2 border-purple-400" />
                    </li>

                    <li>
                        <div class="px-6 my-6">
                            <a href="/createProperty">
                                <button class="flex items-center justify-between w-full px-4 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 border border-gray-300 rounded-lg active:bg-purple-600 hover:bg-gray-100 hover:text-gray-700 focus:outline-none focus:shadow-outline-purple">
                                    Přidat hodnoty
                                    <span class="ml-2" aria-hidden="true">+</span>
                                </button>
                            </a>
                        </div>
                    </li>
                </ul>
            </div>
        </aside>

        <div class="flex flex-col flex-1 w-full">
            <header class="z-10 py-4 bg-white shadow-md dark:bg-gray-800">
                <div class="container flex items-center justify-between h-full px-6 mx-auto text-purple-600 dark:text-purple-300">
                    <div class="flex justify-center flex-1 lg:mr-32">
                    </div>

                    <ul class="flex items-center flex-shrink-0 space-x-6">
                        <!-- Profile menu -->
                        <li class="relative">
                            {% if app.user ? app.user.profilePic %}
                                <div class="relative hidden w-8 h-8 mr-3 rounded-full md:block">
                                    <img class="object-cover w-full h-full rounded-full" src="{{ app.user.profilePic }}" alt="" loading="lazy">
                                    <div class="absolute inset-0 rounded-full shadow-inner" aria-hidden="true"></div>
                                </div>
                            {% else %}
                            {% endif %}
                        </li>
                        <li class="relative">
                            <p class="align-middle rounded-full focus:shadow-outline-purple focus:outline-none">
                                {{ app.user ? app.user.email  }}
                            </p>
                        </li>

                        <li class="relative">
                            <a class="align-middle rounded-full focus:shadow-outline-purple focus:outline-none"
                               href="/{{ app.user ? 'logout' : 'login' }}"
                               @click="isOpen = false">
                                {{ app.user ? 'Logout' : 'Login' }}
                            </a>
                        </li>
                    </ul>
                </div>
            </header>

            <main class="h-full overflow-y-auto">
                <div class="container px-6 mx-auto grid">
                    <br><br>
                    <main class="h-full overflow-y-auto">

                            <ul>
                                <li class="inline-block">
                                    <a href="{{ path('user') }}" class="text-m text-gray-600 dark:text-gray-400 hover:underline">Uživatelé</a>
                                </li>
                                <li class="inline-block text-m text-gray-600 dark:text-gray-400 hover:underline">
                                    >
                                </li>
                                <li class="inline-block">
                                    <b>
                                    <a href="/userDetails/{{ users.id }}" class="text-m text-purple-600 dark:text-purple-400 underline">Detaily {{ users.name }}</a>
                                    </b>
                                </li>
                            </ul>

                        <div class="container px-6 mx-auto grid">
                            <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
                                Detaily uživatele {{ users.name }}
                                {% if users.email %}
                                | {{ users.email }}
                                {% endif %}
                                <hr class="my-2 border-purple-400" />

                                <span class="flex col-span-4 mt-2 sm:mt-auto sm:justify-end">
                                    <div class="inline-flex items-center">
                                        <a href="/editUser/{{ users.id }}">
                                            <button class="mr-2 items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple" aria-label="Edit">
                                                <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewBox="0 0 20 20">
                                                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                                                </svg>
                                            </button>
                                        </a>

                                       <a href="/deleteUser/{{ users.id }}">
                                            <button class="items-center justify-between px-2 py-2 text-sm font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple" aria-label="Delete">
                                                <svg class="w-5 h-5" aria-hidden="true" fill="none" viewBox="0 0 20 20" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" stroke="currentColor">
                                                    <path d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z"
                                                    ></path>
                                                </svg>
                                            </button>
                                        </a>
                                    </div>
                                </span>
                            </h2>

                            <div class="px-4 py-3 mb-8 bg-white rounded-lg shadow-md dark:bg-gray-800 border border-purple-400">
                                <p class="text-m text-gray-600 dark:text-gray-400">
                                    <b class="text-purple-400">Jméno:</b> {{ users.name }}
                                </p>
                                <p class="text-m text-gray-600 dark:text-gray-400">
                                    <b class="text-purple-400">Email:</b> {{ users.email }}
                                </p>
                                <p class="text-m text-gray-600 dark:text-gray-400">
                                    <b class="text-purple-400">Profilový obrázek:</b><br><br>
                                    {% if users.profilePic %}
                                <div class="relative hidden w-56 h-56 mr-3  md:block">
                                    <img class="object-cover w-full h-full " src="{{ users.profilePic }}" alt="" loading="lazy">
                                    <div class="absolute inset-0 shadow-inner" aria-hidden="true"></div>
                                </div>
                                {% else %}
                                {% endif %}
                                </p>
                            </div>
                            <h2 class="my-6 text-2xl font-semibold text-gray-700 dark:text-gray-200">
                                Majetky přiřazeny uživateli {{ users.name }}
                            </h2>
                            <table class="w-full whitespace-no-wrap">
                                <thead>
                                <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
                                    <th class="px-4 py-3">ID</th>
                                    <th class="px-4 py-3">Název</th>
                                    <th class="px-4 py-3">Inventární číslo</th>
                                    <th class="px-4 py-3">Přiřazeno</th>
                                    <th class="px-4 py-3">Cena</th>
                                </tr>
                                </thead>

                                        <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
                                        {% for asset in assignedAssets %}
                                        <tr class="text-gray-700 dark:text-gray-400">
                                            <td class="px-4 py-3 text-sm">
                                                {{ asset.id }}
                                            </td>

                                            <td class="px-4 py-3">
                                                <div class="flex items-center text-sm">
                                                    <div>
                                                        <a href="/details/{{ asset.id }}">
                                                            <p class="font-semibold hover:underline">{{ asset.name|upper }}</p>
                                                        </a>
                                                        <p class="text-xs text-gray-600 dark:text-gray-400">
                                                            {{ asset.guaranteePeriod }} let záruka
                                                        </p>
                                                    </div>
                                                </div>
                                            </td>

                                            <td class="px-4 py-3 text-sm">
                                                {{ asset.inventoryNumber }}
                                            </td>

                                            <td class="px-4 py-3 text-xs">
                                                    <span class="px-2 py-1 font-semibold leading-tight text-green-700 bg-green-100 rounded-full dark:bg-green-700 dark:text-green-100">
                                            <a href="/userDetails/{{ asset.ownedBy.id }}">
                                                {{ asset.ownedBy.name }}
                                            </a>
                                        </span>
                                            </td>

                                            <td class="px-4 py-3 text-sm">
                                                CZK {{ asset.unitPrice }}
                                            </td>
                                        </tr>
                                        {% endfor %}
                                        </tbody>
                            </table>
                            <br>
                        </div>
                    </main>
                </div>
            </main>
        </div>
    </div>
{% endblock %}


