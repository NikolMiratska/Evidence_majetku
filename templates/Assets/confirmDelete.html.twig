{#{% extends 'base.html.twig' %}#}

{#{% block body %}#}
<h2>Confirmation: Delete Category</h2>

<p>You are attempting to delete the category "{{ category.category }}".</p>

{% if associatedAssets %}
    <p><strong>Warning:</strong> This category is assigned to the following assets:</p>
    <ul>
        {% for asset in associatedAssets %}
            <li>{{ asset.name }}</li>
        {% endfor %}
    </ul>
    <p>Are you sure you want to proceed with the deletion?</p>
{% else %}
    <p>Are you sure you want to delete this category?</p>
{% endif %}

<button onclick="confirmDelete()">Confirm Delete</button>

<script>
    function confirmDelete() {
        alert("Category deleted!");
    }
</script>
